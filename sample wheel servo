
import RPi.GPIO as GPIO
import time
 

GPIO.setmode(GPIO.BOARD)
 
ServoPinL = 7                                  
ServoPinR = 11     
GPIO.setup(ServoPinL, GPIO.OUT)                    
GPIO.setup(ServoPinR, GPIO.OUT)       


pwm_freq1 = 50
pwm_freq0 = 10
pwm_servoL = GPIO.PWM(ServoPinL, 50)
pwm_servoR = GPIO.PWM(ServoPinR, 50)

