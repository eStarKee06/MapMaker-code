# Main program 
if __name__ == '__main__':

    try:
        
        # This code repeats forever
        while True:
            
            pwm_servoL.start(10)
            pwm_servoR.start(10)
            print ("Moving to angle 0")
            time.sleep(1)
            
           ''' pwm_servoL.ChangeDutyCycle(10)
